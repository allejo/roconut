{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ paste.title }}</h1>
        <p>
            by {{ paste.user.callsign }} on {{ paste.created | date('M d, Y h:i:sa') }}
        </p>

        <section class="text-md-right mb-3">
            <a class="btn btn-primary"
               href="{{ path('show_message_log', {
                   id: paste.id,
                   key: paste.encryptionKey,
                   format: 'text'
               }) }}"
            >
                View Raw
            </a>
            <a class="btn btn-primary"
               href="{{ path('show_message_log', {
                   id: paste.id,
                   key: paste.encryptionKey,
                   download: 'text'
               }) }}"
            >
                Download
            </a>
        </section>

        {% if encrypted %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <h4>Private Paste</h4>
                <p>If you lose this URL, there is no way of retrieving this paste.</p>

                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}

        <section class="message p-3">
            <pre>{{ message | raw }}</pre>
        </section>
    </div>
{% endblock %}
